// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Link {
  id         String   @id @default(cuid())
  slug       String   @unique
  url        String
  clicks     Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
  uaSample   String?  // último UA resumido
  ipAddress  String?  // para rate limiting
  expiresAt  DateTime? // opcional
  lastHitAt  DateTime? // última vez que se clickeó
}

model Lead {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  answers     String?  // respuestas del brief express (JSON as string for SQLite)
  projectType String?  // brief type
  message     String?
  createdAt   DateTime @default(now())
}

model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  content     String   // MDX content
  category    String
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  imageUrl    String?
  author      String?
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

